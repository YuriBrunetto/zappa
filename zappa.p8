function _init()
	gravity=100
	dt=1/60
	player={
		w=4,
		h=8,
		x=8,
		y=8,
		vel=0,
		onair=false,
		fliped=false
	}
end

function _update60()
	player.vel=gravity*dt
	player.y+=player.vel
	
	if btn(0) then
		player.x -= 1
	end
	if btn(1) then
		player.x += 1
	end
	if btn(2)
	and not player.onair then
		player.fliped=true
		gravity=-100
 end
 if btn(3)
 and not player.onair then
  player.fliped=false
		gravity=100
	end
	
	local dx=0	
	local dy=player.vel*dt
	player.y+=dy
	player.onair=false
	
	if collide(player,"down") then 
		dy=0
		player.y-=((player.y+player.h+1)%8)-1
	elseif collide(player,"up") then
		dy=0
		player.y+=((player.y+1)%8)-1
	else
		player.onair=true
	end
end

function _draw()
	cls(1)
	map(0,0)
	spr(2,player.x,player.y,
	      player.w,player.h,
	      false,player.fliped)
	
end
